---
stylesheets:
- signin-signup.scss
- inputMovingLabel.scss
- button.scss
- modalWindow.scss
errorText: Error Text
---

{{!< mainLayout}} <main>
    <div class="signin-page">
        <div class="signin-page__container">
            <div class="modal-window__header-container">
                <div class="header-container__text">
                    <p>Profile</p>
                </div>
                <div class="header-container__icon-container">{{> close-icon}}</div>
            </div>
            <hr>
            <div id="status" class="mini-text signin-container__error-default">{{errorText}}</div>

            <form>
                <div class="form-indents">
                    {{> input type="text" id="first_name" class="form-container__input-box" label="First Name *" }}
                </div>
                <div class="form-indents">
                    {{> input type="text" id="second_name" class="form-container__input-box" label="Last Name *" }}
                </div>
                <div class="form-indents">
                    {{> input type="text" id="display_name" class="form-container__input-box" label="Display Name *" }}
                </div>
                <div class="form-indents">
                    {{> input type="text" id="login" class="form-container__input-box" label="Login *" }}
                </div>
                <div class="form-indents">
                    {{> input type="text" id="email" class="form-container__input-box" label="Email Address *" }}
                </div>
                <div class="form-indents">
                    {{> input type="text" id="phone" class="form-container__input-box" label="Phone *" }}
                </div>


                {{> button id="submit" class="form-container__button-box form-indents" text="Save"}}
            </form>

            <div class="mini-text signin-container__links-box form-double-indents">
                <span class="links-box__center"><a href="./signIn.hbs">Change Password</a></span>
            </div>

            <div class="mini-text signin-container__links-box form-half-indents">
                <span class="links-box__center"><a href="#" style="color: tomato;">Sign Out</a></span>
            </div>
        </div>
    </div>
    </main>
