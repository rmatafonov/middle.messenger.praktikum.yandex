---
stylesheets:
- signin-signup.scss
- checkbox.scss
- inputMovingLabel.scss
- button.scss
errorText: Error Text
---

{{!< mainLayout}} <main>
    <div class="signin-page">
        <div class="signin-page__container">
            <div class="signin-container__logo"></div>

            <h2>Sign Up</h2>
            <div id="status" class="mini-text signin-container__error-default">{{errorText}}</div>

            <form>
                <div class="form-idents">
                    {{> input type="text" id="first_name" class="form-container__input-box" label="First Name *" }}
                </div>
                <div class="form-idents">
                    {{> input type="text" id="last_name" class="form-container__input-box" label="Last Name *" }}
                </div>
                <div class="form-idents">
                    {{> input type="text" id="login" class="form-container__input-box" label="Login *" }}
                </div>
                <div class="form-idents">
                    {{> input type="password" id="password" class="form-container__input-box" label="Password *" }}
                </div>
                <div class="form-idents">
                    {{> input type="password" id="confirm_password" class="form-container__input-box" label="Confirm Password *" }}
                </div>
                <div class="form-idents">
                    {{> input type="text" id="email" class="form-container__input-box" label="Email Address *" }}
                </div>
                <div class="form-idents">
                    {{> input type="text" id="phone" class="form-container__input-box" label="Phone *" }}
                </div>


                {{> button id="submit" class="form-container__button-box form-idents" text="Sign Up"}}
            </form>

            <div class="mini-text signin-container__links-box form-half-idents">
                <span class="links-box__center"><a href="./signIn.hbs">Sign In</a></span>
            </div>

            <div class="mini-text signin-container__links-box form-double-idents">
                <span class="links-box__center">Copyright Â© <a href="#">Your Website</a> 2022.</span>
            </div>
        </div>
    </div>
    </main>